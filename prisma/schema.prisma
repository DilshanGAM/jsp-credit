generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  email String @id
  name String
  phone String
  password String
  address String
  role String @default("staff")
  createdAt DateTime @default(now())
  lastLogin DateTime @default(now())
  nic String @unique
  status String @default("active")
}
